<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.Pages.AddAndEditPage"
             Title="Add/Edit Task">

    <VerticalStackLayout Spacing="10" Padding="20">
        <Label x:Name="HeaderLabel" 
           FontSize="Title"
           FontAttributes="Bold"
           HorizontalTextAlignment="Center"
           Margin="0,0,0,10" 
           TextColor="#9b8cda"/>
        
        <Label Text="Título da Tarefa" />
        <Entry x:Name="TitleEntry" Placeholder="Digite o título da tarefa..." />

        <Label Text="Descrição" />
        <Editor x:Name="DescriptionEditor" Placeholder="Digite a descrição da tarefa..." HeightRequest="100" />

        <Label Text="Data de Criação" />
        <DatePicker x:Name="CreationDatePicker" />

        <Label Text="Prioridade" />
        <Picker x:Name="PriorityPicker" Title="Selecione a prioridade da tarefa">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Baixa</x:String>
                    <x:String>Média</x:String>
                    <x:String>Alta</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">

            <Button Grid.Column="0" 
            Text="Salvar" 
            Clicked="OnSaveClicked" />

            <Button Grid.Column="1" 
            Text="Cancelar" 
            Clicked="OnCancelClicked" 
            BackgroundColor="Gray" />

        </Grid>
    </VerticalStackLayout>
</ContentPage>