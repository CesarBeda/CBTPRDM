<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.Pages.DetailsPage"
             Title="Task Details">

    <VerticalStackLayout Spacing="10" Padding="20">
        <Label Text="Title:" FontAttributes="Bold" />
        <Label x:Name="TitleLabel" />

        <Label Text="Description:" FontAttributes="Bold" />
        <Label x:Name="DescriptionLabel" />

        <Label Text="Creation Date:" FontAttributes="Bold" />
        <Label x:Name="CreationDateLabel" />

        <Label Text="Priority:" FontAttributes="Bold" />
        <Label x:Name="PriorityLabel" />

        <HorizontalStackLayout Spacing="10" Margin="0,20,0,0">
            <Button Text="Edit" Clicked="OnEditClicked" HorizontalOptions="FillAndExpand" />
            <Button Text="Delete" Clicked="OnDeleteClicked" HorizontalOptions="FillAndExpand" BackgroundColor="Red" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>