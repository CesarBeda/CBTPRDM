<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.Pages.DetailsPage"
             Title="Detalhes da Tarefa">

    <Grid RowDefinitions="*, Auto" Padding="20">

        <VerticalStackLayout Grid.Row="0" Spacing="10">

            <Label Text="Título:" FontAttributes="Bold" />
            <Label x:Name="TitleLabel" />

            <Label Text="Descrição:" FontAttributes="Bold" />
            <Label x:Name="DescriptionLabel" />

            <Label Text="Data de Criação:" FontAttributes="Bold" />
            <Label x:Name="CreationDateLabel" />

            <Label Text="Prioridade:" FontAttributes="Bold" />
            <Label x:Name="PriorityLabel" />

        </VerticalStackLayout>


        <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">

            <Button Grid.Column="0" 
                    Text="Editar" 
                    Clicked="OnEditClicked" />

            <Button Grid.Column="1" 
                    Text="Excluir" 
                    Clicked="OnDeleteClicked"
                    BackgroundColor="Red" />
        </Grid>

    </Grid>
</ContentPage>